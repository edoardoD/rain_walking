{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "builder",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c90",
                "-Wall",
                "-Wpedantic",
                "-g",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/bin/app.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "valgrind",
            "command": "/usr/bin/valgrind",
            "args": [
                "${workspaceFolder}/bin/app.exe",
                "${workspaceFolder}/input/test1.in"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}